    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch FireFox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "https://rsargent.earthtime.org/stories/testrs",
            "clearConsoleOnReload": true,
            "pathMappings": [
                {
                    "url": "https://rsargent.earthtime.org/stories",
                    "path": "${workspaceFolder}"
                },
                {
                    "url": "https://rsargent.earthtime.org/src",
                    "path": "${workspaceFolder}"
                }
            ]
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "https://rsargent.earthtime.org/stories/testrs",
            "pathMapping": {
                "/stories": "${workspaceFolder}",
                "/": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "https://rsargent.earthtime.org/stories/testrs",
            "pathMapping": {
                "/stories": "${workspaceFolder}",
                "/": "${workspaceFolder}"
            }
        }
    ]
}