    "version": "0.2.0",
    "configurations": [
        {
            "type":"firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch FireFox",
            "url": "https://rsargent.earthtime.org/explore",
            "webRoot": "${workspaceFolder}",
            "clearConsoleOnReload": true,
            "suggestPathMappingWizard": true
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "https://rsargent.earthtime.org/explore",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "https://rsargent.earthtime.org/explore",
            "webRoot": "${workspaceFolder}"
        },
    ]
}